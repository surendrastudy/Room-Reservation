<% layout("layouts/boilerPlate") %>
<div class="row mt-3 login-container ">
    <div class="col-lg-6  left-side">
        <h1>Verify Email</h1>
        <form action="/verifyemail" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" placeholder="" class="form-control" required>
            </div> 
            <button class="btn col-4 offset-4 mt-3 flash" style="background-color: #F39C12;">Send OTP</button>
        </form>
    </div>
    <div class="col-lg-6 right-side" style="background-image: url('https://res.cloudinary.com/dkiqoznwu/image/upload/v1727519562/wanderlust_DEV/x3xvxjz2szajreea3zb1.svg'); "></div>
</div>

