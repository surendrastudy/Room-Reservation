<% layout("layouts/boilerPlate") %>

<div class="row mt-3">
    <div class="col-8 offset-3" >
        <!-- <h3><%= listing.title  %></h3> -->
    </div> 
   
    <div class="card custom-card col-6 offset-3 show-card" >
<div class="carousel-inner card-img-top">
              <% listing.image.forEach((image, index) => { %>
                  <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                      <img src="<%= image.url %>" class="d-block w-100 show-image card-img-top" alt="Listing image">
                  </div>
              <% }) %>
          </div>        <div class="card-body my-3">
          <p class="card-text"> &#8377;<%= listing.price.toLocaleString('en-IN') %> /night </p> 
          <p class="card-text">Country : <%= listing.country  %></p>    
          <p class="card-text">Location : <%= listing.location  %></p>
       </div>
       <form action="/booking/<%= listing._id %>/book?_method=PUT" method="post" novalidate class="needs-validation">
        <div class="row">
    
            <div class="mb-3 col-md-5">
                <label for="dateFrom" class="form-label"> Date & Time From </label>
                <input type="datetime-local" name="Bookings[dateFrom]" class="form-control" required>
                <div class="invalid-feedback">
                    Date and Time Should be valid!
                </div>
            </div>
    
            <div class="mb-3 col-md-6">
                <label for="dateTo" class="form-label"> To </label>
                <input type="datetime-local" name="Bookings[dateTo]" class="form-control" required>
                <div class="invalid-feedback">
                    Date and Time Should be valid!
                </div>
            </div>
    
        </div>
        <div class="mb-3">
            <label for="bookingFacilities" class="form-label"> For More Facilities </label>
            <textarea name="Bookings[bookingFacilities]" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">
                Please enter a short Facilities
            </div>
        </div>
        <button class="btn edit-btn mb-3" style="background-color: #E67E22;">Book</button>
    </form>
    
    </div> 

</div>